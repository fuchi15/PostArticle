{# default_frame.twigを継承して共通のヘッダー、フッターを表示するにはdtb_page_layout に登録が必要 #}
{% extends 'default_frame.twig' %}

{% set body_class = 'postarticle_page' %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <p class="text-danger">{{ hello }}</p>
            {{ form_start(form, {'action': 'store', 'methods': 'post'}) }}
            <h3>タイトル</h3>
            {{ form_widget(form.title) }}
            <p>内容</p>
            {{ form_widget(form.content) }}
            {{ form_widget(form.author, { 'value': app.user.id }) }}
            {{ form_end(form) }}
        </div>
    </div>
{% block javascripts %}

    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>

    <script type="text/javascript">
    tinymce.init({

        selector: 'textarea',
    });

    </script>
{% endblock %}
{% endblock %}