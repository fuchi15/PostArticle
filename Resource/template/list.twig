{# default_frame.twigを継承して共通のヘッダー、フッターを表示するにはdtb_page_layout に登録が必要 #}
{% extends 'default_frame.twig' %}

{% set body_class = 'postarticle_page' %}

{% block main %}
    {% macro tree(Article) %}
        <li>
            <a href="{{ url('PostArticle_detail', { 'id': Article.id }) }}">
                {{ Article.post_title }}
            </a>
        </li>
    {% endmacro %}

    {{ hello }}
    <nav id="category" class="drawer_block pc">
        <ul class="category-nav">
            {% for Article in Articles %}
                {{ _self.tree(Article) }}
            {% endfor %}
        </ul> <!-- category-nav -->
    </nav>
{% endblock %}